---
interface Props {
  description: string;
  vision: string;
  mission: string[];
  founded: number;
}

const { description, vision, mission, founded } = Astro.props;
---

<section id="about" class="py-20 bg-white dark:bg-dark-card">
  <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
    <div class="grid grid-cols-1 lg:grid-cols-2 gap-12 items-center">
      <div>
        <h2 class="text-sm text-blue-600 font-semibold uppercase tracking-wider mb-2">Tentang Kami</h2>
        <h3 class="text-3xl md:text-4xl font-bold text-gray-900 dark:text-white mb-6">
          Mengubah Visi Menjadi Realitas Digital
        </h3>
        <p class="text-gray-600 dark:text-gray-400 text-lg mb-8">
          {description}
        </p>

        <div class="space-y-4">
          <div class="flex items-start space-x-3">
            <div class="w-6 h-6 bg-blue-600/20 rounded-full flex items-center justify-center mt-1">
              <svg class="w-4 h-4 text-blue-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7"></path>
              </svg>
            </div>
            <div>
              <h4 class="font-semibold text-gray-900 dark:text-white">Visi</h4>
              <p class="text-gray-600 dark:text-gray-400">{vision}</p>
            </div>
          </div>

          <div>
            <h4 class="font-semibold text-gray-900 dark:text-white mb-3">Misi</h4>
            <ul class="space-y-2">
              {mission.map((item) => (
                <li class="flex items-start space-x-3">
                  <div class="w-6 h-6 bg-blue-600/20 rounded-full flex items-center justify-center mt-1 flex-shrink-0">
                    <svg class="w-4 h-4 text-blue-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7"></path>
                    </svg>
                  </div>
                  <span class="text-gray-600 dark:text-gray-400">{item}</span>
                </li>
              ))}
            </ul>
          </div>
        </div>
      </div>

      <div class="relative">
        <div class="bg-gradient-to-br from-blue-600 to-blue-800 rounded-2xl p-8">
          <div class="grid grid-cols-2 gap-6">
            <div class="bg-white/10 backdrop-blur-sm rounded-xl p-6 text-center">
              <div class="text-4xl font-bold text-white mb-2">{2026 - founded}</div>
              <div class="text-blue-200">Tahun Pengalaman</div>
            </div>
            <div class="bg-white/10 backdrop-blur-sm rounded-xl p-6 text-center">
              <div class="text-4xl font-bold text-white mb-2">50+</div>
              <div class="text-blue-200">Proyek Selesai</div>
            </div>
            <div class="bg-white/10 backdrop-blur-sm rounded-xl p-6 text-center">
              <div class="text-4xl font-bold text-white mb-2">30+</div>
              <div class="text-blue-200">Klien Happy</div>
            </div>
            <div class="bg-white/10 backdrop-blur-sm rounded-xl p-6 text-center">
              <div class="text-4xl font-bold text-white mb-2">10+</div>
              <div class="text-blue-200">Tim Ahli</div>
            </div>
          </div>
        </div>
        <div class="absolute -bottom-4 -right-4 w-24 h-24 bg-blue-600/20 rounded-full blur-2xl"></div>
        <div class="absolute -top-4 -left-4 w-32 h-32 bg-blue-800/20 rounded-full blur-2xl"></div>
      </div>
    </div>
  </div>
</section>
