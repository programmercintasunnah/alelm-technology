---
import type { Testimonial } from '../lib/api';

interface Props {
  testimonials: Testimonial[];
}

const { testimonials } = Astro.props;
---

<section id="testimonials" class="py-20 bg-gray-50 dark:bg-dark">
  <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
    <div class="text-center mb-16">
      <h2 class="text-sm text-blue-600 font-semibold uppercase tracking-wider mb-2">Testimoni</h2>
      <h3 class="text-3xl md:text-4xl font-bold text-gray-900 dark:text-white mb-4">
        Apa Kata Klien Kami
      </h3>
      <p class="text-gray-600 dark:text-gray-400 max-w-2xl mx-auto">
        Kepuasan klien adalah prioritas utama kami
      </p>
    </div>

    <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-4 gap-8">
      {testimonials.map((testimonial) => (
        <div class="bg-white dark:bg-dark-card rounded-2xl p-6 border border-gray-200 dark:border-dark-border hover:border-blue-600/50 hover:shadow-xl hover:shadow-blue-600/10 transition-all duration-300">
          <div class="flex items-center mb-4">
            {[...Array(5)].map((_, i) => (
              <svg 
                class={`w-5 h-5 ${i < testimonial.rating ? 'text-yellow-400' : 'text-gray-300 dark:text-gray-600'}`} 
                fill="currentColor" 
                viewBox="0 0 20 20"
              >
                <path d="M9.049 2.927c.3-.921 1.603-.921 1.902 0l1.07 3.292a1 1 0 00.95.69h3.462c.969 0 1.371 1.24.588 1.81l-2.8 2.034a1 1 0 00-.364 1.118l1.07 3.292c.3.921-.755 1.688-1.54 1.118l-2.8-2.034a1 1 0 00-1.175 0l-2.8 2.034c-.784.57-1.838-.197-1.539-1.118l1.07-3.292a1 1 0 00-.364-1.118L2.98 8.72c-.783-.57-.38-1.81.588-1.81h3.461a1 1 0 00.951-.69l1.07-3.292z" />
              </svg>
            ))}
          </div>

          <p class="text-gray-600 dark:text-gray-400 mb-6 italic">
            "{testimonial.testimonial}"
          </p>

          <div class="flex items-center">
            <img 
              src={testimonial.avatar} 
              alt={testimonial.name}
              class="w-12 h-12 rounded-full object-cover"
            />
            <div class="ml-3">
              <div class="font-semibold text-gray-900 dark:text-white">
                {testimonial.name}
              </div>
              <div class="text-sm text-gray-500">
                {testimonial.position}
              </div>
            </div>
          </div>
        </div>
      ))}
    </div>
  </div>
</section>
