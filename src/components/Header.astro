---
interface Props {
  companyName: string;
}

const { companyName } = Astro.props;
---

<header class="fixed top-0 left-0 right-0 z-50 bg-gradient-to-b from-[#0d1b2a] via-[#1b3a5f] to-[#0d1b2a] border-b border-blue-800/30">
  <nav class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
    <div class="flex justify-between items-center h-16">
      <a href="/" class="flex items-center">
        <img src="/logo-alelm-tech-landscape-light.png" alt="Alelm Technology" class="h-12 md:h-14 w-auto" />
      </a>

      <div class="hidden md:flex items-center space-x-8">
        <a href="#about" class="text-gray-300 hover:text-blue-400 transition-colors">Tentang</a>
        <a href="#services" class="text-gray-300 hover:text-blue-400 transition-colors">Layanan</a>
        <a href="#portfolio" class="text-gray-300 hover:text-blue-400 transition-colors">Portofolio</a>
        <a href="#testimonials" class="text-gray-300 hover:text-blue-400 transition-colors">Testimoni</a>
        <a href="#faq" class="text-gray-300 hover:text-blue-400 transition-colors">FAQ</a>
        <a href="#contact" class="px-4 py-2 bg-blue-600 hover:bg-blue-700 text-white rounded-lg transition-colors shadow-lg shadow-blue-600/20">Hubungi Kami</a>
      </div>

      <button id="mobile-menu-btn" class="md:hidden p-2 text-gray-300">
        <svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 6h16M4 12h16M4 18h16"></path>
        </svg>
      </button>
    </div>

    <div id="mobile-menu" class="hidden md:hidden pb-4 bg-[#0d1b2a]/95 backdrop-blur-md rounded-b-lg -mx-4 px-4 border-t border-blue-800/30">
      <a href="#about" class="block py-3 text-gray-200 hover:text-blue-400 border-b border-blue-800/30">Tentang</a>
      <a href="#services" class="block py-3 text-gray-200 hover:text-blue-400 border-b border-blue-800/30">Layanan</a>
      <a href="#portfolio" class="block py-3 text-gray-200 hover:text-blue-400 border-b border-blue-800/30">Portofolio</a>
      <a href="#testimonials" class="block py-3 text-gray-200 hover:text-blue-400 border-b border-blue-800/30">Testimoni</a>
      <a href="#faq" class="block py-3 text-gray-200 hover:text-blue-400 border-b border-blue-800/30">FAQ</a>
      <a href="#contact" class="block py-3 text-blue-400 font-medium">Hubungi Kami</a>
    </div>
  </nav>
</header>

<script>
  const menuBtn = document.getElementById('mobile-menu-btn');
  const mobileMenu = document.getElementById('mobile-menu');

  menuBtn?.addEventListener('click', () => {
    mobileMenu?.classList.toggle('hidden');
  });

  document.querySelectorAll('#mobile-menu a').forEach(link => {
    link.addEventListener('click', () => {
      mobileMenu?.classList.add('hidden');
    });
  });
</script>
